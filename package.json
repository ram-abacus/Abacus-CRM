{
  "name": "abacus-crm",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack Social Media CRM with JWT authentication and role-based dashboards",
  "scripts": {
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules backend/dist frontend/dist",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "prisma:migrate": "cd backend && npm run prisma:migrate",
    "prisma:seed": "cd backend && npm run prisma:seed",
    "prisma:studio": "cd backend && npm run prisma:studio",
    "setup": "npm run install:all && npm run prisma:migrate && npm run prisma:seed",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview"
  },
  "dependencies": {
    "@prisma/client": "latest",
    "@vitejs/plugin-react": "latest",
    "axios": "latest",
    "bcryptjs": "latest",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "latest",
    "clsx": "^2.1.1",
    "cors": "latest",
    "crypto": "latest",
    "date-fns": "latest",
    "dotenv": "latest",
    "express": "latest",
    "fs": "latest",
    "http": "latest",
    "jiti": "latest",
    "jsonwebtoken": "latest",
    "less": "latest",
    "lightningcss": "latest",
    "lucide-react": "^0.454.0",
    "multer": "latest",
    "next": "16.0.1",
    "path": "latest",
    "prisma": "latest",
    "react": "19.2.0",
    "react-dom": "latest",
    "react-router-dom": "latest",
    "sass": "latest",
    "sass-embedded": "latest",
    "socket.io": "latest",
    "socket.io-client": "latest",
    "stylus": "latest",
    "sugarss": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "terser": "latest",
    "tsx": "latest",
    "url": "latest",
    "vite": "latest",
    "yaml": "latest"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "concurrently": "^8.2.2",
    "postcss": "^8.5",
    "tailwindcss": "4.1.16",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}